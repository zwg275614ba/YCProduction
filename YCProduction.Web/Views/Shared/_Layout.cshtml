<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YCProduction.Web</title>
    <!-- 依 赖 样 式 -->
    <link rel="stylesheet" href="~/lib/layui-v2.5.4/css/layui.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layuimini.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style id="layuimini-bg-color">
    </style>
</head>
<body class="layui-layout-body layuimini-all">
    @RenderBody()
    <!-- 依 赖 脚 本 -->
    <script src="~/lib/layui-v2.5.4/layui.js" asp-append-version="true"></script>
    <script src="~/js/lay-config.js" asp-append-version="true"></script>
    <script src="~/js/jquery-1.10.2.min.js" asp-append-version="true"></script>
    <!--天气 -->
    <script>(function (T, h, i, n, k, P, a, g, e) { g = function () { P = h.createElement(i); a = h.getElementsByTagName(i)[0]; P.src = k; P.charset = "utf-8"; P.async = 1; a.parentNode.insertBefore(P, a) }; T["ThinkPageWeatherWidgetObject"] = n; T[n] || (T[n] = function () { (T[n].q = T[n].q || []).push(arguments) }); T[n].l = +new Date(); if (T.attachEvent) { T.attachEvent("onload", g) } else { T.addEventListener("load", g, false) } }(window, document, "script", "tpwidget", "//widget.seniverse.com/widget/chameleon.js"))</script>
    <script>
        tpwidget("init", {
            "container": "tp-weather-widget",
            "color": "#FFFFFF",
            "flavor": "slim",
            "location": "WT33C6J2C563",
            "geolocation": "enabled",
            "language": "zh-chs",
            "unit": "c",
            "theme": "chameleon",
            "bubble": "enabled",
            "alarmType": "badge",
            "uid": "U78371FB98",
            "hash": "cd55c15865ecbe0f16ba78ca60ad51eb"
        });
        tpwidget("show");</script>
    <script>
        layui.use(['element', 'layer', 'layuimini'], function () {
            var $ = layui.jquery,
                element = layui.element,
                layer = layui.layer;
            //加载菜单
            layuimini.init('/System/Menu/GetUserMenu', { title: '首页', icon: 'fa fa-home', href: '/Home/home' });
            //修改个人信息
            $('#info').click(function () {
                layer.open({
                    type: 2,
                    title: '基本信息',
                    content: '/User/ModifyInfo',
                    area: ['700px', '450px'],
                    maxmin: false
                });
            });
        });
        $(function () {
            //设置页面加载动画
            setTimeout(function () {
                $('.layui-load').removeClass('layui-hide');
                $('.loader-main').hide();
            }, 3000);
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
